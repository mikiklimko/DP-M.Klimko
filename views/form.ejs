        <div class="row mt-5">
            <div class="col-md-8 m-auto">
                <div class="card card-body">
                    <h1 class="text-center mb-3">
                        <i class="fas fa-clipboard"></i>
                        <p class="lead m-3"><%= email %></p>
                    </h1>
                    <%- include('./partials/messages.ejs'); -%>
                        <form action="/users/form" method="POST">
                            <div class="form-group">
                                <label for="adresa">Adresa</label>
                                <input type="adresa" class="form-control" name="adresa" id="adresa"
                                    placeholder="Park Angelinum 17"
                                    value="<%= typeof adresa != 'undefined' ? adresa : '' %>">
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="mesto">Mesto</label>
                                    <input type="mesto" class="form-control" id="mesto" name="mesto" placeholder="Kosice"
                                        value="<%= typeof mesto != 'undefined' ? mesto : '' %>">
                                </div>

                                <div class="form-group col-md-2">
                                    <label for="PSC">PSČ</label>
                                    <input type="psc" class="form-control" id="PSC" name="PSC" placeholder="04001"
                                        value="<%= typeof PSC != 'undefined' ? PSC : '' %>">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label" for="telefon">Telefonne číslo</label>
                                <input type="telefon" class="form-control" placeholder="+421 000 000 000" id="telefon"
                                    name="telefon" required
                                    value="<%= typeof telefon != 'undefined' ? telefon : '' %>">

                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="GroupName2" name="RadioGroupName"
                                        class="custom-control-input">
                                    <label class="custom-control-label" for="GroupName2">Nepotrebujem ubytovanie</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="GroupName1" name="RadioGroupName"
                                        class="custom-control-input" onclick="ShowRadioButtonDiv('GroupName', 3)">
                                    <label class="custom-control-label" for="GroupName1">Potrebujem ubytovanie</label>
                                    <DIV ID="GroupName1Div" STYLE="display:none;">
                                        <div class="form-group">
                                            <br>
                                            <label for="exampleSelect1">Počet noci:</label>
                                            <select class="form-control" id="exampleSelect1">
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                            </select>
                                        </div>
                                    </DIV>

                                </div>
                                <div class="form-group">
                                    <br>
                                    <label for="exampleSelect1">Strava</label>
                                    <select class="form-control" id="exampleSelect1">
                                        <option>Bez stravi</option>
                                        <option>Polpenzia</option>
                                        <option>Plná penzia</option>
                                    </select>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">Odoslat</button>
                        </form>
                </div>
            </div>
        </div>
        <SCRIPT>
            function ShowRadioButtonDiv(IdBaseName, NumberOfButtons) {
                for (x = 1; x <= NumberOfButtons; x++) {
                    CheckThisButton = IdBaseName + x;
                    ThisDiv = IdBaseName + x + 'Div';
                    if (document.getElementById(CheckThisButton).checked) {
                        document.getElementById(ThisDiv).style.display = "block";
                    }
                    else {
                        document.getElementById(ThisDiv).style.display = "none";
                    }
                }
                return false;
            }
        </SCRIPT>
    </body>

</html>